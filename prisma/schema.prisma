// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-arm64-openssl-3.0.x"]
  // "windows", "native", 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type FriendRequest {
  id       String
  email    String
  username String
  pic      String
}

type Message {
  sender      String   @db.ObjectId
  receiver    String   @db.ObjectId
  text        String
  receiverpic String
  senderpic   String
  seen        Boolean  @default(false)
  sendAt      DateTime @default(now())
}

type conversation {
  id    String
  email String
}

model Conversations {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  messages Message[]
}

model User {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  email           String          @unique @db.String
  pic             String?
  username        String
  authID          String          @unique
  friendsRequest  FriendRequest[]
  Allconverstions conversation[]
  ID              String?         @db.ObjectId
  users           User?           @relation("friend", fields: [ID], references: [id], onUpdate: NoAction, onDelete: NoAction)
  friends         User[]          @relation("friend")
  joinedAt        DateTime        @default(now())
}
